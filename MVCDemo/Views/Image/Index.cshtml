@model IEnumerable<BusinessLayer.Image>

@{
    ViewBag.Title = "Index";
}

<div style="font-family:Arial">
    <h2>Index</h2>

    <p>
        @Html.ActionLink("Create New", "Create")
    </p>
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.username)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.imagename)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            using (Html.BeginForm("Delete", "Image", new { id = item.UserId }))
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.username)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.imagename)
                    </td>
                    <td>
                        <img src="@Url.Content(item.imagepath)" height="100" width="100" />
                    </td>
                    <td>
                        @Html.ActionLink("Edit", "Edit", new { id = item.UserId }) |
                        <input type="submit" value="Delete" onclick="return confirm('Are you sure you want to delete record with ID = @item.UserId');" />
                    </td>
                </tr>
            }

        }

    </table>
</div>