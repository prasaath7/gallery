@model IEnumerable<BusinessLayer.Image>

@{
    ViewBag.Title = "ImageView";
}
<style type="text/css">
    .imgBox {
        width: 200px;
        height: 200px;
        opacity: 1.0;
        filter: alpha(opacity=100);
    }

        .imgBox:hover {
            -moz-box-shadow: 0 0 10px #ccc;
            -webkit-box-shadow: 0 0 10px #ccc;
            box-shadow: 0 0 10px #ccc;
            opacity: 0.4;
            filter: alpha(opacity=40);
        }
</style>
<h2>Image View</h2>

@foreach (var item in Model)
{
    <div style=" margin:30px; float:left; height:200px;
                   overflow:hidden; width:200px;">
        <div class="imgBox">
            @Html.DisplayFor(modelItem => item.imagename)
            <img src="@Url.Content(item.imagepath)" height="250" width="250" title="@item.imagename " />

        </div>
    </div>
    
}

